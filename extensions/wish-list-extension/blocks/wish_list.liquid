<div class="wish-list-container" >
  <div id="wish-list-popup" class="wish-list-popup">
      <div class="wish-list-flex"> 
        <div class="close-wish-list">
          <button onclick="closeWishList()">&times</button>
       </div>
  
        <div id="insert" class="list"></div>
      </div>
  </div>


  <input type="hidden" class="customer-id-list" value="{{ customer.id }}">
  <button id="user-wishList" class="wish-list-button button button--full-width button--secondary">
    Wish List
  </button>
</div>

<script async id='myScript' src={{ "wish_list.js" | asset_url }} defer></script>
<script src={{ "popup.js" | asset_url }} defer></script>

<style>
.wish-list-container {
  position: fixed;
  display: flex;
  justify-content: right;
  flex-direction: column;
  bottom: 0;
  right: 0;
  max-width: 550px;
}

.wish-list-popup {
  display: none;
  width: 350px;
  height: 375px;
  background-color: #f8f9fa;
  border-radius: 5px;
  border: 1px solid #ccc;
}

.close-wish-list {
  width: 350px;
  height: 40px;
  background-color: #EBECED;
  padding: 0;
  text-align: right;
  flex: 1 0 100%;
}

.close-wish-list button {
  height: 40px;
  width: 40px;
  margin: 0;
  padding: 0;
  border: none;
  background: none;
  font-size: 40px;
  font-weight: bold;
}

.list {
  width: 100%;
  height: 100%;
  {% comment %} bottom: 50px;
  right: 0; {% endcomment %}
}

.list p {
  font-size: 20px;
  color: #333;
  text-align: center;
}

.wish-list-button {
  width: 150px;
  height: 50px;
  right: 0;
  margin-bottom: 20px;
  margin-right: 20px;
}
</style>

{% schema %}
{
  "name": "Wish List Embedded",
  "target": "body",
  "settings": [
    {
      "id" : "product",
      "type": "product",
      "label": "Product ID",
      "info": "View Wish List"
    }
  ]
}
{% endschema %}