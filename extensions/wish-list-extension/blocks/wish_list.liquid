<div class="wish-list-container" >
  <div id="wish-list-popup" class="wish-list-popup">
        <div class="close-wish-list">
          <div class="close-wish-list-text">
            <P>Your Wish List</P>
          </div>
          <div class="close-wish-list-button"> 
            <button onclick="closeWishList()">&times</button>
          </div>
        </div>

      <div id="insert" class="list"></div>
  </div>

  <input type="hidden" class="customer-id-list" value="{{ customer.id }}">
  <button id="user-wishList" class="wish-list-button button button--full-width button--secondary">
    Wish List
  </button>
</div>

<script async id='myScript' src={{ "wish_list.js" | asset_url }} defer></script>
<script src={{ "popup.js" | asset_url }} defer></script>

<style>
.wish-list-container {
  position: fixed;
  display: flex;
  justify-content: right;
  flex-direction: column;
  bottom: 0;
  right: 0;
  max-width: 550px;
}

.wish-list-popup {
  display: none;
  width: 350px;
  height: 375px;
  background-color: #f8f9fa;
  border-radius: 5px;
  border: 1px solid #ccc;
  margin-right: 10px;
  margin-bottom: 25px;
}

.close-wish-list {
  width: 350px;
  height: 40px;
  display: flex;
  flex-direction: row;
  background-color: #EBECED;
  padding: 0;
  flex: 1 0 100%;
}

.close-wish-list-text {
  width: 50%;
  font-size: 15px;
  color: #333;
  text-align: left;
}
.close-wish-list-text p {
  margin: 0;
  margin-left: 20px;
  margin-top: 10px;
  font-weight: bold;
}

.close-wish-list-button {
  width: 50%;
  text-align: right;
}

.close-wish-list-button button{
  height: 40px;
  width: 40px;
  margin: 0;
  padding: 0;
  border: none;
  background: none;
  font-size: 40px;
  font-weight: bold;
}

.list {
  width: 100%;
  height: 100%;
  margin-left: 25px;
  margin-top: 20px;
}

.list-ul {
  list-style-type: none;
  margin: 0;
  margin-top: 15px;
  padding: 0;
}

.list-li {
  height: 30px;
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
}

.list-li img{
  object-fit: contain;
  margin-right: 10px;
}

.list-flex {
  width: 90px;
  font-size: 9px;
  font-weight: bold;
  flex-direction: column;
}

.wish-list-button {
  width: 150px;
  height: 50px;
  right: 0;
  margin-bottom: 20px;
  margin-right: 20px;
}
</style>

{% schema %}
{
  "name": "Wish List Embedded",
  "target": "body",
  "settings": [
    {
      "id" : "product",
      "type": "product",
      "label": "Product ID",
      "info": "View Wish List"
    }
  ]
}
{% endschema %}