<div id="popup-container-success" class="popup">
  <div class="flex-container">
    <div class="close-popup">
      <button>&times</button>
    </div>
    {% comment %} <div>
      <p style="font-size: 18px; color: #333; text-align: center;">Testing</p>
    </div> {% endcomment %}
  </div>
</div>
<div id="popup-container-error" class="popup">
  <div class="flex-container">
    <div class="close-popup">&times</div>
    <div>
      <p style="font-size: 18px; color: #333; text-align: center;">Error Testing</p>
    </div>
  </div>
</div>

<script async id='myScript' src={{ "add_to.js" | asset_url }} defer></script>

<style>
  .popup {
    position: fixed;
    top: 50%;
    width: 100%;
    margin: auto;
    z-index: 2;
    display: none;
  }

  .flex-container {
    display: flex;
    background-color: #ffffff;
    width: 350px;
    height: 300px;
    margin: 0 auto;
    border-radius: 5px;
    border: 1px solid #ccc;
  }

  .close-popup {
    width: 350px;
    height: 40px;
    background-color: #BEBEBE;
    padding: 0;
    text-align: right;
  }

  .close-popup button {
    height: 40px;
    width: 40px;
    margin: 0;
    padding: 0;
    border: none;
    background: none;
    font-size: 40px;
    font-weight: bold;
  }


</style>

{% schema %}
{
  "name": "Popup Message Embedded",
  "target": "body",
  "settings": [
    {
      "id" : "product",
      "type": "product",
      "label": "Product ID",
      "info": "View Wish List"
    }
  ]
}
{% endschema %}