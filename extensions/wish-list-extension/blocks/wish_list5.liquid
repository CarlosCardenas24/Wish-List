{% comment %} {% assign price = product.selected_or_first_available_variant.price | money_without_currency %}
{% assign variantImage = product.selected_or_first_available_variant | image_url %}
{% assign productImage = product | image_url %} {% endcomment %}

{% comment %} {% if customer %} {% endcomment %}
<div class="wish-list-container" style="position: fixed; bottom: 0; right: 0">
  {% comment %} <input type="hidden" class="customer-id" value="{{ customer.id }}">
  <input type="hidden" class="product-id" value="{{ product.id }}">
  <input type="hidden" class="title" value="{{ product.title }}">
  <input type="hidden" class="shop-id" value="{{ shop.id }}">
  <input type="hidden" class="variant-id" value="{{ product.selected_or_first_available_variant.id }}">
  <input type="hidden" class="variant-title" value="{{ product.selected_or_first_available_variant.title }}">
  <input type="hidden" id="price" value="{{ price }}">
  {% unless product.has_only_default_variant %}  
  <input type="hidden" class="image" value="{{ variantImage }}">
  {% else %}
  <input type="hidden" class="image" value="{{ productImage }}">
  {% endunless %} {% endcomment %}
  <button class="wish-list-button" style="padding: 10px 20px; background-color: #007BFF; color: #fff; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
    Wish List
  </button>
  <div id="insert"></div>
</div>


{% comment %} {% endif %} {% endcomment %}

<script async id='myScript' src={{ "wish_list.js" | asset_url }} defer></script>

{% schema %}
{
  "name": "Wish List Embedded",
  "target": "body",
  "settings": [
    {
      "id" : "product",
      "type": "product",
      "label": "Product ID",
      "info": "View Wish List"
    }
  ]
}
{% endschema %}