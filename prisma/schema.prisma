generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Product {
  id          String   
  name        String
  shopId      String
  variantId   String   @id
  variantName String
  price       Float
  image       String
  quantity    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model User {
  userId    String @id
  variantId String 
  quantity  Int

  @@unique([userId, variantId])
}

